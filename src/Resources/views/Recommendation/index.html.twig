{% extends '@EndroidPredictionIoDemo/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ preload(asset('/build/recommendation.css', 'endroid_prediction_io')) }}">
{% endblock %}

{% block content %}
    <h1>Prediction IO Recommendation Engine</h1>
    <div id="application"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        let appConfig = {
            statePath: "{{ path('predictionio_recommendation_state') }}",
            initializePath: "{{ path('predictionio_recommendation_initialize') }}",
            viewPath: "{{ path('predictionio_recommendation_view', { userId: 'UID', itemId: 'IID' }) }}",
            purchasePath: "{{ path('predictionio_recommendation_purchase', { userId: 'UID', itemId: 'IID' }) }}",
        }
    </script>
    <script src="{{ preload(asset('/build/recommendation.js', 'endroid_prediction_io')) }}"></script>
{% endblock %}
